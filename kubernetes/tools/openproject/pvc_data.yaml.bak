kind: PersistentVolumeClaim
metadata:
  name: pvc-tools-openproject-data
  labels:
    stack: tools
    container: openproject
    volume: data
spec:
  accessModes:
    - ReadWriteOnce
  resources:
    requests:
      storage: 1Gi
  storageClassName: nfs
  volumeName: pv-pvc-tools-openproject-data
