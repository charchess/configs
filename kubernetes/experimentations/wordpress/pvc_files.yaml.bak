apiVersion: v1
kind: PersistentVolumeClaim
metadata:
  name: pvc-experimentations-wordpress-files
  labels:
    stack: experimentations
    container: wordpress
    volume: files
spec:
  accessModes:
    - ReadWriteOnce
  resources:
    requests:
      storage: 1Gi
  storageClassName: nfs
  volumeName: pv-pvc-experimentations-wordpress-files
