apiVersion: v1
kind: PersistentVolumeClaim
metadata:
  name: pvc-experimentations-ollama-open-webui
  labels:
    stack: experimentations
    container: ollama
    volume: open-webui
spec:
  accessModes:
    - ReadWriteOnce
  resources:
    requests:
      storage: 1Gi
  storageClassName: nfs
  volumeName: pv-pvc-experimentations-ollama-open-webui
