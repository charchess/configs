apiVersion: v1
kind: PersistentVolumeClaim
metadata:
  name: pvc-experimentations-puppet-code
  labels:
    stack: experimentations
    container: puppet
    volume: code
spec:
  accessModes:
    - ReadWriteOnce
  resources:
    requests:
      storage: 1Gi
  storageClassName: nfs
  volumeName: pv-pvc-experimentations-puppet-code
