metadata:
  name: pvc-experimentations-esphome-config
  labels:
    stack: experimentations
    container: esphome
    volume: config
spec:
  accessModes:
    - ReadWriteOnce
  resources:
    requests:
      storage: 1Gi
  storageClassName: nfs
  volumeName: pv-pvc-experimentations-esphome-config
