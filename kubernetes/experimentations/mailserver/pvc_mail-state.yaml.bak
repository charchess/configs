apiVersion: v1
kind: PersistentVolumeClaim
metadata:
  name: pvc-experimentations-mailserver-mail-state
  labels:
    stack: experimentations
    container: mailserver
    volume: mail-state
spec:
  accessModes:
    - ReadWriteOnce
  resources:
    requests:
      storage: 1Gi
  storageClassName: nfs
  volumeName: pv-pvc-experimentations-mailserver-mail-state
