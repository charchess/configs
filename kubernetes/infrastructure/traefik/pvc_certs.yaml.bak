apiVersion: v1
kind: PersistentVolumeClaim
metadata:
  name: pvc-infrastructure-traefik-certs
  labels:
    stack: infrastructure
    container: traefik
    volume: certs
spec:
  accessModes:
    - ReadWriteOnce
  resources:
    requests:
      storage: 1Gi
  storageClassName: nfs
  volumeName: pv-pvc-infrastructure-traefik-certs
