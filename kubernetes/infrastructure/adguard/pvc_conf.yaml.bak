apiVersion: v1
kind: PersistentVolumeClaim
metadata:
  name: pvc-infrastructure-adguardhome-conf
  labels:
    stack: infrastructure
    container: adguardhome
    volume: conf
spec:
  accessModes:
    - ReadWriteOnce
  resources:
    requests:
      storage: 1Gi
  storageClassName: nfs
  volumeName: pv-pvc-infrastructure-adguardhome-conf
