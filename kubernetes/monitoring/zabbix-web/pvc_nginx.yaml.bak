apiVersion: v1
kind: PersistentVolumeClaim
metadata:
  name: pvc-monitoring-zabbix-web-nginx
  labels:
    stack: monitoring
    container: zabbix-web
    volume: nginx
spec:
  accessModes:
    - ReadWriteOnce
  resources:
    requests:
      storage: 1Gi
  storageClassName: nfs
  volumeName: pv-pvc-monitoring-zabbix-web-nginx
