apiVersion: v1
kind: PersistentVolumeClaim
metadata:
  name: pvc-monitoring-zabbix-server-etc
  labels:
    stack: monitoring
    container: zabbix-server
    volume: etc
spec:
  accessModes:
    - ReadWriteOnce
  resources:
    requests:
      storage: 1Gi
  storageClassName: nfs
  volumeName: pv-pvc-monitoring-zabbix-server-etc
